import("//build/config/chromeos/ui_mode.gni")

assert(is_chromeos_ash)

static_library("kiosk_heartbeat") {
  sources = [
    "kiosk_heartbeat_telemetry_sampler.cc",
    "kiosk_heartbeat_telemetry_sampler.h",
