    },
    {
      types = [
        {
          mojom = "chromecast.mojom.AudioChannel"
          cpp = "::chromecast::media::AudioChannel"
        },
      ]
      traits_headers = [ "multiroom_mojom_traits.h" ]
      traits_public_deps = [ "//chromecast/public/media" ]
    },
  ]
}
