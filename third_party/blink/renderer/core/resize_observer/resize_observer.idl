// https://drafts.csswg.org/resize-observer-1/#resize-observer-callback

callback ResizeObserverCallback = void (sequence<ResizeObserverEntry> entries, ResizeObserver observer);

// https://drafts.csswg.org/resize-observer-1/#resize-observer-interface

[
    Exposed=Window,
    ActiveScriptWrappable
] interface ResizeObserver {
    [CallWith=ScriptState, MeasureAs=ResizeObserver_Constructor] constructor(ResizeObserverCallback callback);
    void observe(Element target, ResizeObserverOptions options);
    void observe(Element target);
    void unobserve(Element target);
    void disconnect();
};
