  sources = [ "lock_screen_reauth_manager_unittest.cc" ]

  deps = [
    ":online_reauth",
    "//ash:test_support",
    "//ash/public/cpp",
    "//base",
    "//base/test:test_support",
    "//chrome/browser",
    "//chrome/browser:browser_process",
    "//chrome/browser/ash/login/saml:test_support",
    "//chrome/browser/ash/login/users:test_support",
