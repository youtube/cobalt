    "//ios/testing/earl_grey:eg_app_support+eg2",
    "//ios/web/public",
    "//ios/web/public/js_messaging",
  ]
  frameworks = [ "XCTest.framework" ]
}

source_set("eg_test_support+eg2") {
  configs += [
    "//build/config/compiler:enable_arc",
