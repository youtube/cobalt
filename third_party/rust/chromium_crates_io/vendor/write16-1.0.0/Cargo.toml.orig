[package]
name = "write16"
version = "1.0.0"
edition = "2021"
description = "A UTF-16 analog of the Write trait"
license = "Apache-2.0 OR MIT"
readme = "README.md"
documentation = "https://docs.rs/write16/"
homepage = "https://docs.rs/write16/"
