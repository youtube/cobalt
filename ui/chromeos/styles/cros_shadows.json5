/*
 * Chrome OS shadows.
 *
 *
 */
 {
  options: {
    CSS: {
      prefix: 'cros'
    },
  },
  untyped_css: {
    /* TODO(calamity): Turn shadows into a first-class citizen of the generator */
    /* box-shadow values*/
    shadows: {
      elevation_1_shadow: '0 1px 2px var(--cros-shadow-color-key), 0 1px 3px var(--cros-shadow-color-ambient)',
      elevation_2_shadow: '0 1px 2px var(--cros-shadow-color-key), 0 2px 6px var(--cros-shadow-color-ambient)',
      elevation_3_shadow: '0 1px 3px var(--cros-shadow-color-key), 0 4px 8px var(--cros-shadow-color-ambient)',
      elevation_4_shadow: '0 2px 3px var(--cros-shadow-color-key), 0 6px 10px var(--cros-shadow-color-ambient)',
      elevation_5_shadow: '0 4px 4px var(--cros-shadow-color-key), 0 8px 12px var(--cros-shadow-color-ambient)',
    }
  }
 }
