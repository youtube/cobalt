import("../build_webui_tests.gni")

assert(!is_android)

build_webui_tests("build") {
  files = [
    "composebox_test.ts",
    "test_contextual_tasks_browser_proxy.ts",
    "test_searchbox_page_handler.ts",
    "contextual_tasks_browsertest.ts",
    "contextual_tasks_webview_browsertest.ts",
    "post_message_handler_test.ts",
    "test_utils.ts",
  ]

  static_files = [ "test.html" ]

  ts_path_mappings =
      [ "chrome://contextual-tasks/*|" +
        rebase_path(
            "$root_gen_dir/chrome/browser/resources/contextual_tasks/tsc/*",
            target_gen_dir) ]
  ts_deps = [
    "//chrome/browser/resources/contextual_tasks:build_ts",
    "//chrome/test/data/webui:build_ts",
    "//ui/webui/resources/cr_components/composebox:build_ts",
    "//ui/webui/resources/cr_components/search:build_ts",
    "//ui/webui/resources/js:build_ts",
    "//ui/webui/resources/mojo:build_ts",
  ]
  ts_definitions = [
    "//tools/typescript/definitions/chrome_event.d.ts",
    "//tools/typescript/definitions/webview_tag.d.ts",
    "//tools/typescript/definitions/web_request.d.ts",
  ]
}
