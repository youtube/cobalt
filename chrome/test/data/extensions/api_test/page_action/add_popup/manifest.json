{
  "name": "A page action which adds a popup.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "page_action": {
    "default_title": "Popup Title",
    "default_icon": "icon.png"
  }
}
