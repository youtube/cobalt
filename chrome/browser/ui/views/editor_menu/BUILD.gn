    "utils/pre_target_handler_view.cc",
    "utils/pre_target_handler_view.h",
    "utils/utils.cc",
    "utils/utils.h",
  ]

  deps = [
    "//base",
    "//chromeos/components/editor_menu/public/cpp",
    "//chromeos/crosapi/mojom",
    "//ui/aura",
    "//ui/display",
    "//ui/events",
    "//ui/gfx",
    "//ui/views",
