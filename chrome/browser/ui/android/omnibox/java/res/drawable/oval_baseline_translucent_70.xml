<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/filled_button_ripple_color">

    <item
        android:id="@android:id/mask"
        android:top="@dimen/fusebox_attachment_remove_vertical_padding"
        android:left="@dimen/fusebox_attachment_remove_horizontal_padding"
        android:bottom="@dimen/fusebox_attachment_remove_vertical_padding"
        android:right="@dimen/fusebox_attachment_remove_horizontal_padding">

        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
        </shape>

    </item>

    <item
        android:top="@dimen/fusebox_attachment_remove_vertical_padding"
        android:left="@dimen/fusebox_attachment_remove_horizontal_padding"
        android:bottom="@dimen/fusebox_attachment_remove_vertical_padding"
        android:right="@dimen/fusebox_attachment_remove_horizontal_padding">

        <shape android:shape="oval">
            <solid android:color="@color/white_alpha_70"/>
        </shape>

    </item>

</ripple>
