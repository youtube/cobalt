  files = [
    "profile_card_menu_test.ts",
    "profile_picker_app_test.ts",
    "profile_picker_main_view_test.ts",
    "test_manage_profiles_browser_proxy.ts",
    "legacy_managed_user_profile_notice_test.ts",
    "profile_customization_test.ts",
