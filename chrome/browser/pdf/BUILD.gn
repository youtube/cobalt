    "//extensions/browser",
    "//pdf:features",
    "//testing/gtest",
  ]
}

source_set("pdf_test_utils") {
  testonly = true
  sources = [
    "pdf_test_util.cc",
    "pdf_test_util.h",
  ]
  deps = [
    "//base",
    "//extensions/browser",
    "//net",
    "//services/network/public/mojom:url_loader_base",
    "//url",
  ]
}
