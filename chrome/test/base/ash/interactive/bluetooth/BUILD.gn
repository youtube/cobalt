  testonly = true

  sources = [
    "bluetooth_power_state_observer.cc",
    "bluetooth_power_state_observer.h",
    "bluetooth_util.cc",
    "bluetooth_util.h",
  ]

  deps = [
    "//base/test:test_support",
    "//device/bluetooth",
    "//ui/base:test_support",
  ]
}
