<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="start"
    style="@style/AlertDialogContent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/quick_delete_dialog_description" />

    <org.chromium.components.browser_ui.widget.text.TextViewWithCompoundDrawables
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textDirection="locale"
        android:drawableStart="@drawable/ic_watch_later_24dp"
        android:paddingBottom="24dp"
        android:drawablePadding="12dp"
        app:chromeDrawableTint="@macro/default_icon_color"
        android:text="@string/clear_history_title"
        android:textAppearance="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.components.browser_ui.widget.text.TextViewWithCompoundDrawables
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textDirection="locale"
        android:drawableStart="@drawable/permission_cookie"
        android:paddingBottom="24dp"
        android:drawablePadding="12dp"
        app:chromeDrawableTint="@macro/default_icon_color"
        android:text="@string/clear_cookies_and_site_data_title"
        android:textAppearance="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.components.browser_ui.widget.text.TextViewWithCompoundDrawables
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textDirection="locale"
        android:drawableStart="@drawable/ic_collections_grey"
        android:paddingBottom="24dp"
        android:drawablePadding="12dp"
        app:chromeDrawableTint="@macro/default_icon_color"
        android:text="@string/clear_cache_title"
        android:textAppearance="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.ui.widget.TextViewWithClickableSpans
        android:id="@+id/search_history_disambiguation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />
</LinearLayout>
