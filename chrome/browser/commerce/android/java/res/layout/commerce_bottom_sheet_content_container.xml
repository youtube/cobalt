<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commerce_bottom_sheet_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <include layout="@layout/bottom_sheet_handlebar" />
  <ListView
      android:id="@+id/commerce_content_list_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:paddingHorizontal="@dimen/content_recycler_view_padding"
      android:paddingBottom="@dimen/content_recycler_view_padding"
      android:orientation="vertical"
      android:divider="@null" />
</LinearLayout>