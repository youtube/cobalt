<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/tab_group_list_bottom_sheet_drag_handlebar"
      android:importantForAccessibility="no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/tab_group_list_bottom_sheet_drag_handlebar_margin_top"
      android:src="@drawable/drag_handlebar"
      app:tint="@macro/drag_handlebar_color" />

  <TextView
      android:id="@+id/tab_group_parity_bottom_sheet_title_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/tab_group_list_bottom_sheet_title_text_margin_top"
      android:layout_marginStart="@dimen/tab_group_list_bottom_sheet_title_margin_left"
      android:layout_marginBottom="@dimen/tab_group_list_bottom_sheet_title_text_margin_bottom"
      android:text="@string/tab_group_list_bottom_sheet_title"
      tools:text="@string/tab_group_list_bottom_sheet_title"
      android:textAppearance="@style/TextAppearance.Headline2Thick.Primary"
      android:gravity="start" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/tab_group_parity_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
</LinearLayout>