import("//build/config/chromeos/ui_mode.gni")

assert(is_chromeos)

component("cpp") {
  defines = [ "IS_MAHI_PUBLIC_CPP_IMPL" ]

  sources = [
    "mahi_browser_util.cc",
    "mahi_browser_util.h",
    "mahi_manager.cc",
    "mahi_manager.h",
    "mahi_media_app_content_manager.cc",
    "mahi_media_app_content_manager.h",
    "mahi_media_app_events_proxy.cc",
    "mahi_media_app_events_proxy.h",
    "mahi_switches.cc",
    "mahi_switches.h",
    "mahi_util.cc",
    "mahi_util.h",
    "mahi_web_contents_manager.cc",
    "mahi_web_contents_manager.h",
  ]

  deps = [
    "//base",
    "//chromeos/crosapi/mojom",
    "//components/account_id",
    "//components/user_manager",
    "//google_apis",
    "//ui/base",
    "//ui/color",
    "//ui/gfx",
  ]
  if (is_chromeos_ash) {
    deps += [ "//ash/constants" ]
  }
  if (is_chromeos_lacros) {
    deps += [ "//chromeos/startup" ]
  }
}
