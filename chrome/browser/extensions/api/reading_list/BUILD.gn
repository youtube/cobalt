import("//extensions/buildflags/buildflags.gni")

assert(enable_extensions)

source_set("reading_list") {
  sources = [
    "reading_list_api.cc",
    "reading_list_api.h",
    "reading_list_api_constants.cc",
    "reading_list_api_constants.h",
    "reading_list_event_router.cc",
