{
  "name": "no caching",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Checks that content scripts only execute once.",
  "permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["document_idle.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["document_start.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["document_end.js"],
      "run_at": "document_end"
    }
  ]
}
