  if (is_win) {
    deps = [ "//chrome/updater/win" ]
  }
  if (is_mac) {
    deps = [ "//chrome/updater/mac" ]
  }
  if (is_linux) {
    deps = [ "//chrome/updater/linux" ]
  }

  if (is_win || is_mac || is_linux) {
    deps += [
      "//chrome/updater/test/qualification_app",
      "//chrome/updater/tools",
    ]
  }
}

