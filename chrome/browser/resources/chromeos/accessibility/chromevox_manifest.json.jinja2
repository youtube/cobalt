{
{%if key is defined %}
  "key": "{{key}}",
{% endif %}
{% if is_manifest_v3 == '1' %}
  "manifest_version": 3,
  "minimum_chrome_version": "93",
  "background": {
    "service_worker": "chromevox/mv3/chromevox_loader.js",
    "type": "module"
  },
{% else %}
  "manifest_version": 2,
  "background": {
    "page": "chromevox/mv2/background/background.html"
  },
{% endif %}
  "name": "__MSG_CHROMEVOX_NAME__",
  "version": "{{set_version}}",
  "description": "__MSG_CHROMEVOX_DESCRIPTION__",
{% if is_guest_manifest == '1' %}
  "incognito": "split",
{% endif %}
  "bluetooth": {},
  "permissions": [
    "accessibilityPrivate",
    "audio",
    "bluetoothPrivate",
    "brailleDisplayPrivate",
    "clipboardRead",
    "chromeosInfoPrivate",
    "commandLinePrivate",
    "downloads",
    "loginState",
    "metricsPrivate",
    "notifications",
    "settingsPrivate",
    "storage",
    "tabs",
    "tts",
{% if is_manifest_v3 == '1' %}
    "offscreen"
{% else %}
    "chrome://resources/",
    "https://docs.google.com/*",
    "https://docs.sandbox.google.com/*"
{% endif %}
  ],
{% if is_manifest_v3 == '1' %}
  "host_permissions": [
    "chrome://resources/",
    "https://docs.google.com/*",
    "https://docs.sandbox.google.com/*"
  ],
{% endif %}
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*",
        "https://docs.sandbox.google.com/*"
      ],
      "all_frames": true,
      "js": [
        "chromevox/mv2/injected/cvox_gdocs_script.js"
      ]
    }
  ],
  "automation": {
    "desktop": true
  },
  "options_page": "chromevox/options/options.html",
  "default_locale": "en",
{% if is_manifest_v3 != '1' %}
  "content_security_policy": "default-src 'none'; script-src 'self' 'wasm-eval' chrome://resources; style-src 'unsafe-inline' chrome://resources; img-src 'self' data:;",
{% else %}
  "content_security_policy": {
    "extension_pages": "default-src 'none'; script-src 'self' chrome://resources 'wasm-unsafe-eval'; style-src 'unsafe-inline' chrome://resources; img-src 'self' data:;"
  },
{% endif %}
  "externally_connectable": {
    "ids": [
      // Braille IME.
      "jddehjeebkoimngcbdkaahpobgicbffp"
    ]
  }
}
