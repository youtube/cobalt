<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ViewStub
        android:id="@+id/web_app_header_layout"
        android:layout="@layout/web_app_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/web_app_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/web_app_header_layout" />

    <ViewStub
        android:id="@+id/web_app_header_find_toolbar_tablet_stub"
        android:inflatedId="@+id/find_toolbar"
        android:layout_width="@dimen/find_in_page_popup_width"
        android:layout_height="@dimen/find_in_page_popup_height"
        android:layout_marginEnd="@dimen/find_in_page_popup_margin_end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout="@layout/find_toolbar" />
</RelativeLayout>