import("//build/config/chromeos/ui_mode.gni")

assert(is_chromeos && is_chromeos_device)

copy("helper") {
  sources = [
    "reset_dut.py",
    "test_sudo_helper.py",
  ]
  outputs = [ "$root_out_dir/{{source_file_part}}" ]
}

source_set("common") {
  testonly = true

  sources = [
    "switches.h",
    "test_sudo_helper_client.cc",
    "test_sudo_helper_client.h",
    "utils.cc",
    "utils.h",
  ]

  deps = [
    "//base",
    "//content/public/browser",
  ]
}

executable("client") {
  testonly = true
  output_name = "test_sudo_helper_client"

  sources = [ "test_sudo_helper_client_main.cc" ]

  deps = [
    ":common",
    "//base",
  ]
}
