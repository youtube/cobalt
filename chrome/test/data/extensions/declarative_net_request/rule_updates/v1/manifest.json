{
  "name": "Declarative Net Request Blocker",
  "manifest_version": 3,
  "version": "1",
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "background": {"service_worker": "background.js"}
}
