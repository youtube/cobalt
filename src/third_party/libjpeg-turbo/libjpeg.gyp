            'simd/x86_64/jsimd.c',
            'simd/jsimd.h',
          ],
          # Rules for assembling .asm files with yasm.
          'rules': [
            {
              'rule_name': 'assemble',
              'extension': 'asm',
                  'inputs': [ ],
                  'outputs': [
                    '../../out/<(RULE_INPUT_ROOT).asm.o',
                  ],
                  'action': [
                    '<(path_to_yasm)',
