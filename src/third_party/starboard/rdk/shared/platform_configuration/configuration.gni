import("//starboard/build/config/base_configuration.gni")
import("//starboard/build/config/linux/rdk/config_variables.gni")

# TODO(b/435468447): the current player_filter_tests depend on some shared player
# sources which are not included in RDK builds, let's disable them for now.
enable_shared_player_filter_tests = false

cobalt_font_package = "limited"

sb_filter_based_player = false
gl_type = "system_gles2"

install_target_path =
  "//starboard/build/install/install_target.gni"

no_pedantic_warnings_config_path =
  "$rdk_starboard_root/third_party/starboard/rdk/shared/platform_configuration:no_pedantic_warnings"

pedantic_warnings_config_path =
  "$rdk_starboard_root/third_party/starboard/rdk/shared/platform_configuration:pedantic_warnings"

speed_config_path =
  "$rdk_starboard_root/third_party/starboard/rdk/shared/platform_configuration:speed"

size_config_path =
  "$rdk_starboard_root/third_party/starboard/rdk/shared/platform_configuration:size"

if (sb_is_evergreen_compatible) {
  sb_evergreen_compatible_use_libunwind = true
}
