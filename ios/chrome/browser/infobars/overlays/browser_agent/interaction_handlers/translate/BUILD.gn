    "//ios/chrome/browser/overlays",
    "//ios/chrome/browser/overlays/public/infobar_banner",
    "//ios/chrome/browser/overlays/public/infobar_modal",
    "//ios/chrome/browser/translate:public",
    "//ios/chrome/browser/web_state_list",
  ]
}

