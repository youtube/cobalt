source_set("eg_test_support+eg2") {
  configs += [
    "//build/config/compiler:enable_arc",
    "//build/config/ios:xctest_config",
  ]
  testonly = true

  sources = [
    "qr_scanner_app_interface.h",
    "qr_scanner_app_interface_stub.mm",
  ]
  deps = [
    "//ios/chrome/browser/ui/scanner:camera_state",
