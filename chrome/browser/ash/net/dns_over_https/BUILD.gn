    "templates_uri_resolver.h",
    "templates_uri_resolver_impl.cc",
    "templates_uri_resolver_impl.h",
  ]

  public_deps = [ "//chrome/browser:browser_public_dependencies" ]

  deps = [
    "//ash/constants",
    "//base",
