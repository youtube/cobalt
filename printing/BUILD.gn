if (use_cups) {
  if (is_chromeos_device) {
    pkg_config("cups") {
      packages = [ "cups" ]
    }
  } else {
    config("cups") {
      if (is_mac) {
        libs = [ "cups" ]
        lib_dirs = [ "$mac_sdk_path/usr/lib" ]
      } else {
        # rebase_path does not accept an empty string
        if (use_sysroot) {
          cups_sysroot = rebase_path(sysroot)
        } else {
          cups_sysroot = ""
        }
        libs = exec_script("cups_config_helper.py",
                           [
                             "--libs-for-gn",
                             cups_sysroot,
                           ],
                           "value")
      }
    }
  }
}

