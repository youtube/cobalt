    "//chromeos/crosapi/mojom",
    "//content/public/browser:browser",
    "//ui/gfx",
    "//ui/views",
  ]

  if (is_chromeos_ash) {
    sources += [
      "editor_manager_ash.cc",
      "editor_manager_ash.h",
