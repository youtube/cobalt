import("//third_party/protobuf/proto_library.gni")

proto_library("proto") {
  proto_in_dir = "//"
  generate_cc = true
  generate_python = false
  sources = [
    "common.proto",
    "metadata.proto",
    "navigation.proto",
    "session.proto",
    "storage.proto",
  ]
}

source_set("proto_util") {
  sources = [
    "proto_util.cc",
    "proto_util.h",
  ]
  public_deps = [ ":proto" ]
  deps = [
    "//base",
    "//ios/web/common:user_agent",
  ]
}

source_set("unittests") {
  testonly = true
  sources = [ "proto_util_unittest.cc" ]
  deps = [
    ":proto",
    ":proto_util",
    "//base",
    "//testing/gtest",
  ]
}
