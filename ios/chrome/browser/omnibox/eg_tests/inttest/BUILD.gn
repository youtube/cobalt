  testonly = true
  sources = [ "omnibox_inttest_egtest.mm" ]
  deps = [
    ":eg_test_support+eg2",
    "//base",
    "//ios/chrome/app/strings",
    "//ios/chrome/browser/omnibox/eg_tests:eg_test_support+eg2",
    "//ios/chrome/browser/omnibox/public:features",
    "//ios/chrome/browser/shared/public/features",
