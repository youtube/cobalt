</enum>

<!-- LINT.ThenChange(//ui/webui/resources/cr_components/composebox/contextual_entrypoint_and_carousel.ts:FileValidationError) -->

<enum name="ContextualSearchMultimodalState">
  <int value="0" label="Text Only"/>
  <int value="1" label="File Only"/>
  <int value="2" label="Text and File"/>
</enum>

<!-- LINT.IfChange(SubmissionType) -->

<enum name="ContextualSearchSubmissionType">
  <int value="0" label="Submission with no tools"/>
  <int value="1" label="DeepSearch"/>
