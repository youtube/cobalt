  # directory basis. See //tools/chromeos/gen_deps.sh for details.
  "+chrome/browser/ash/display",
  "+chrome/common/chrome_paths.h",
  "+chrome/test/base",

  # Dependencies outside of //chrome:
  "-content",
]

