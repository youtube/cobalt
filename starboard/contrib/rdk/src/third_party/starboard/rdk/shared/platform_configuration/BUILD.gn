config("platform_configuration") {
  configs = [
    "//starboard/build/config/sabi",
  ]
  cflags = []
  ldflags = []
  defines = []
  cflags_cc = []

  if (!build_with_separate_cobalt_toolchain) {
    ldflags += [
      "-Wl,--version-script," + rebase_path("exported-symbols.map", root_build_dir),
    ]
  }

  if (current_toolchain == host_toolchain) {
    cflags += [
      "-O2",
      "-Wno-unused-parameter",
    ]
  } else {
    configs += [
      "//build/config/compiler:rtti",
    ]

    if (current_toolchain == starboard_toolchain) {
      configs += [ "//starboard/build/config:starboard" ]
    }

    libs = [
      "pthread",
    ]

    cflags += [
      "-fvisibility=hidden",
      "-fsigned-char",
      "-fno-strict-aliasing",
      "-fno-delete-null-pointer-checks",
      "-fno-omit-frame-pointer",
      "-Wno-sign-compare",
      "-Wno-stringop-overflow",
      "-Wno-stringop-truncation",
      "-Wno-unused-function",
      "-Wno-unused-result",
      "-Wno-unused-variable",
      "-funwind-tables",
    ]

    cflags_cc += [
      "-Wno-invalid-offsetof",
      "-Wno-literal-suffix",
      # Generated by Audio Renderer and Audio Sink implementations.
      "-Wno-reorder",
    ]

    defines += [
      # support large files
      "_FILE_OFFSET_BITS=64",
    ]

    if (is_qa || is_gold) {
      cflags += [
        "-g1",
      ]
    } else {
      cflags += [
        "-g",
      ]
    }

    if (use_asan) {
      cflags += [
        "-fsanitize=address",
        "-fno-omit-frame-pointer",
      ]
      ldflags += [
        "-fsanitize=address",

        # Force linking of the helpers in sanitizer_options.cc
        "-Wl,-u_sanitizer_options_link_helper",
      ]
      defines += [ "ADDRESS_SANITIZER" ]
    } else if (use_tsan) {
      cflags += [
        "-fsanitize=thread",
        "-fno-omit-frame-pointer",
      ]
      ldflags += [ "-fsanitize=thread" ]
      defines += [ "THREAD_SANITIZER" ]
    }

    defines += [
      # Defined to get format macro constants from <inttypes.h>.
      "__STDC_FORMAT_MACROS",
      # Enable GNU extensions to get prototypes like ffsl.
      "_GNU_SOURCE=1",
    ]
  }

  if (cobalt_pending_clean_up) {
    cflags += [
      "-Wno-multichar",
      "-Wno-dangling-else",
      "-Wno-return-type",
      "-Wno-attributes",
      "-Wno-restrict",
      "-Wno-ignored-attributes",
    ]
  }
}

config("speed") {
  cflags = [ "-O2" ]

  if (is_qa || is_gold) {
    cflags += [
      # Compile symbols in separate sections
      "-ffunction-sections",
      "-fdata-sections",
    ]
  }
}

config("size") {
  cflags = [ "-Os" ]

  if (is_qa || is_gold) {
    cflags += [
      # Compile symbols in separate sections
      "-ffunction-sections",
      "-fdata-sections",
    ]
  }
}

config("pedantic_warnings") {
  cflags = [
    "-Wall",
    "-Wextra",
    "-Wunreachable-code",
  ]
  if (!is_clang) {
    cflags += [
      "-Wno-expansion-to-defined",
    ]
  }
}

config("no_pedantic_warnings") {
  if (!is_clang) {
    cflags = [
      "-Wno-sign-compare",
      "-Wno-conversion",
      "-Wno-deprecated-declarations",
      "-Wno-ignored-qualifiers",
      "-Wno-multichar",
      "-Wno-sign-conversion",
      "-Wno-unused-function",
      "-Wno-unused-local-typedefs",
      "-Wno-unused-parameter",
      "-Wno-unused-variable",
      "-Wno-unused-but-set-variable",
      "-Wno-psabi",
      "-Wno-stringop-truncation",
      "-Wno-attributes",
      "-Wno-return-type",
    ]
    cflags_cc = [
      "-Wno-deprecated-copy",
      "-Wno-invalid-offsetof",
      "-Wno-literal-suffix",
      "-Wno-pessimizing-move",
    ]
  } else {
    cflags = [
      # Do not warn for implicit type conversions that may change a value.
      "-Wno-conversion",
      "-Wno-deprecated-declarations",
      "-Wno-inconsistent-missing-override",
      "-Wno-unknown-warning-option",
    ]
  }
}
