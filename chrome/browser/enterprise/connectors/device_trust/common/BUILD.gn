import("//build/config/chromeos/ui_mode.gni")

source_set("common") {
  sources = [
    "common_types.cc",
    "device_trust_constants.cc",
    "metrics_utils.cc",
  ]

  public = [
    "common_types.h",
    "device_trust_constants.h",
    "metrics_utils.h",
  ]

  public_deps = [ "//base" ]

  deps = []

  if (is_chromeos_ash) {
    deps +=
        [ "//chromeos/ash/components/install_attributes:install_attributes" ]
  }
}

source_set("unit_tests") {
  testonly = true
  sources = [ "common_types_unittest.cc" ]

  deps = [
    ":common",
    "//testing/gtest",
  ]
}
