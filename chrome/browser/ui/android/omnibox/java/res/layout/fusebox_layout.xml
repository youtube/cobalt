<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.chromium.chrome.browser.omnibox.fusebox.FuseboxAttachmentRecyclerView
        android:id="@+id/location_bar_attachments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="8dp"
        android:paddingTop="18dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="12dp"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <org.chromium.ui.widget.ChromeImageView
        android:id="@+id/location_bar_attachments_add"
        android:layout_width="@dimen/fusebox_button_size"
        android:layout_height="@dimen/fusebox_button_size"
        android:visibility="gone"
        android:padding="@dimen/fusebox_button_padding"
        android:contentDescription="@string/accessibility_omnibox_open_or_close_context_popup"
        android:src="@drawable/ic_add_round_24dp"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/search_box_icon_background_opaque"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_bar"
        app:tint="@color/default_icon_color_tint_list"/>

    <org.chromium.ui.widget.ChromeImageView
        android:id="@+id/location_bar_attachments_settings"
        android:layout_width="@dimen/fusebox_button_size"
        android:layout_height="@dimen/fusebox_button_size"
        android:visibility="gone"
        android:padding="@dimen/fusebox_button_padding"
        android:src="@drawable/ic_settings_tune_24dp"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:clipToOutline="true"
        app:layout_constraintStart_toEndOf="@id/location_bar_attachments_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_bar"
        app:tint="@color/default_icon_color_tint_list"/>

    <org.chromium.ui.widget.ButtonCompat
        style="@style/OutlinedButton"
        android:id="@+id/fusebox_request_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/min_touch_target_size"
        android:visibility="gone"
        android:contentDescription="@string/accessibility_omnibox_reset_mode"
        android:drawableStart="@drawable/search_spark_black_24dp"
        android:drawableEnd="@drawable/btn_close"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:text="@string/ai_mode_entrypoint_label"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/location_bar_attachments_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_bar"
        app:buttonColor="@color/gm3_baseline_surface_container"
        app:buttonBorderStyle="solid"/>

    <org.chromium.ui.widget.ChromeImageView
        android:id="@+id/navigate_button"
        android:layout_width="@dimen/fusebox_button_size"
        android:layout_height="@dimen/fusebox_button_size"
        android:visibility="gone"
        android:src="@drawable/ic_arrow_forward_blue_24dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside"
        android:background="@drawable/oval_baseline_primary_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/margin_spacer"/>

</merge>
