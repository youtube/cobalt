import("//chrome/common/features.gni")
import("//ui/webui/resources/tools/generate_grd.gni")

generate_grd("build_grdp") {
  grd_prefix = "omnibox_icons"
  resource_path_prefix = "cr_components/omnibox/icons"
  out_grd = "$target_gen_dir/resources.grdp"
  input_files = [
    "calculator.svg",
    "calendar.svg",
    "chrome_product.svg",
    "currency.svg",
    "default.svg",
    "definition.svg",
    "dino.svg",
    "drive_docs.svg",
    "drive_folder.svg",
    "drive_form.svg",
    "drive_image.svg",
    "drive_logo.svg",
    "drive_pdf.svg",
    "drive_sheets.svg",
    "drive_slides.svg",
    "drive_video.svg",
    "extension_app.svg",
    "finance.svg",
    "incognito.svg",
    "journeys.svg",
    "mac_share.svg",
    "note.svg",
    "page.svg",
    "share.svg",
    "sites.svg",
    "sunrise.svg",
    "tab.svg",
    "translation.svg",
    "trending_up.svg",
    "when_is.svg",
    "win_share.svg",
  ]
  input_files_base_dir = rebase_path(".", "//")
}

if (is_chrome_branded) {
  generate_grd("chrome_branded_build_grdp") {
    grd_prefix = "omnibox_icons"
    resource_path_prefix = "cr_components/omnibox/icons"
    out_grd = "$target_gen_dir/chrome_branded_resources.grdp"
    input_files = [ "google_g.svg" ]
    input_files_base_dir =
        rebase_path("//chrome/app/theme/google_chrome/realbox", "//")
  }
}
