    "$out_dir" + "js_pumpkin_tagger_bin.js",
    "$out_dir" + "tagger_wasm_main.js",
    "$out_dir" + "tagger_wasm_main.wasm",
    "$out_dir" + "en_us/action_config.binarypb",
    "$out_dir" + "en_us/pumpkin_config.binarypb",
    "$out_dir" + "fr_fr/action_config.binarypb",
