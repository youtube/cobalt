source_set("model") {
  sources = [
    "promo_source.h",
    "promo_source.mm",
  ]
  public_deps = [ "//base" ]
}

source_set("utils") {
  sources = [
    "utils.h",
    "utils.mm",
  ]
  deps = [
    ":features",
    "//components/feature_engagement/public",
    "//components/sync/service",
    "//ios/chrome/browser/shared/model/application_context",
    "//ios/chrome/browser/shared/model/prefs:pref_names",
    "//ios/chrome/browser/shared/public/features",
    "//ios/chrome/browser/signin/model:signin_util",
  ]
  public_deps = [ "//base" ]
  frameworks = [ "Foundation.framework" ]
}

source_set("default_browser_interest_signals") {
  sources = [
    "default_browser_interest_signals.h",
    "default_browser_interest_signals.mm",
  ]
  deps = [
    ":utils",
    "//components/feature_engagement/public",
    "//ios/chrome/browser/shared/coordinator/default_browser_promo",
  ]
  public_deps = [ "//base" ]
}

source_set("test_support") {
  testonly = true
  sources = [
    "utils_test_support.h",
    "utils_test_support.mm",
  ]
  deps = [ ":utils" ]
}

source_set("unit_tests") {
  testonly = true
  sources = [ "utils_unittest.mm" ]
  deps = [
    ":default_browser_interest_signals",
    ":test_support",
    ":utils",
    "//base/test:test_support",
    "//components/feature_engagement/public",
    "//components/prefs:test_support",
    "//components/sync_preferences:test_support",
    "//ios/chrome/browser/default_browser/model:utils",
    "//ios/chrome/browser/shared/model/prefs:browser_prefs",
    "//ios/chrome/browser/shared/model/prefs:pref_names",
    "//ios/chrome/browser/shared/model/profile/test",
    "//ios/chrome/browser/shared/public/features",
    "//ios/chrome/test:test_support",
    "//ios/web/public/test",
    "//testing/gtest",
    "//ui/base",
  ]
}

source_set("features") {
  sources = [
    "features.h",
    "features.mm",
  ]
  public_deps = [ "//base" ]
}
