import("//build/linux/strip_binary.gni")
import("//build/toolchain/toolchain.gni")
import("//cobalt/build/modular_executable.gni")
import("//testing/test.gni")
import("//ui/base/ui_features.gni")

if (!toolchain_for_rust_host_build_tools) {
  assert(!cobalt_is_release_build || is_official_build,
         "Release builds are only available in official builds.")
}

if (is_ios) {
  import("//build/config/apple/mobile_config.gni")
}

# This arg temporarily enables or disables the updater_sandbox target.
# It's disabled on CI by default due to missing libcurl pkg. To enable it
# locally, set it to true before building the target.
declare_args() {
  build_updater_sandbox = false

  if (is_ios && target_platform == "tvos") {
    # tvOS: Default app bundle identifier.
    cobalt_bundle_identifier = "dev.cobalt.tvos"

    # tvOS: Default Info.plist path for the bundle.
    cobalt_info_plist = "//cobalt/shell/app/tvos-Info.plist"
  }
}

group("gn_all") {
  testonly = true

  # TODO(b/371589344): Fix android build configs.
  deps = [ "//starboard:starboard_group" ]
  if (!cobalt_is_release_build) {
    deps += [ "//starboard/nplb" ]
  }
  if (is_android) {
    # TODO(cobalt): reuse build rules below to define Android target.
    deps += [ "android:cobalt_apk" ]
  } else if (is_ios && target_platform == "tvos") {
    deps += [ ":cobalt" ]
  } else if (!is_cobalt_hermetic_build) {
    deps += [ ":strip_cobalt_binary" ]
  }
  if (is_cobalt_hermetic_build) {
    deps += [
      ":cobalt_loader",
      "//starboard/elf_loader:elf_loader_sandbox($starboard_toolchain)",
      "//starboard/elf_loader:elf_loader_sys_sandbox($starboard_toolchain)",
      "//starboard/loader_app:loader_app($starboard_toolchain)",
    ]
  }
  if (is_starboard && build_updater_sandbox) {
    deps += [ "//chrome/updater/cobalt:updater_sandbox" ]
  }
  if (use_crashpad) {
    deps += [
      "//third_party/crashpad/crashpad/handler:crashpad_handler($native_target)",
      "//third_party/crashpad/crashpad/tools:crashpad_database_util($native_target)",
    ]
  }
}

group("cobalt_browsertests") {
  testonly = true

  deps = [ "testing:cobalt_browsertests" ]
}

if (is_ios && target_platform == "tvos") {
  ios_app_bundle("cobalt") {
    testonly = true

    sources = [ "app/tvos/main.mm" ]

    deps = [
      ":common",
      "//base",
      "//cobalt/browser/tvos/intents:yt_intents",
      "//cobalt/shell:cobalt_shell_app",
      "//cobalt/shell:cobalt_shell_lib",
      "//content/public/app",
      "//starboard:starboard_group",
    ]
    bundle_deps = [
      ":cobalt_shell_framework_resources",
      "shell/app/ios/resources",
    ]

    intents_target = "//cobalt/browser/tvos/intents:yt_intents"

    data_deps = [ "//tools/v8_context_snapshot:v8_context_snapshot" ]

    bundle_identifier = cobalt_bundle_identifier
    entitlements_path = "//cobalt/shell/app/tvos-entitlements.plist"
    info_plist = cobalt_info_plist
  }

  bundle_data("cobalt_shell_framework_resources") {
    testonly = true
    sources = [ "$root_out_dir/cobalt_shell.pak" ]

    public_deps = [ "//cobalt/shell:pak" ]

    outputs = [ "{{bundle_resources_dir}}/{{source_file_part}}" ]
  }
} else if (!is_android) {
  if (is_cobalt_hermetic_build) {
    cobalt_target_type = "modular_executable"
  } else {
    cobalt_target_type = "executable"
  }
  target(cobalt_target_type, "cobalt") {
    testonly = true

    sources = [ "app/cobalt.cc" ]

    configs += [ "//build/config/gcc:rpath_for_built_shared_libraries" ]

    deps = [
      ":common",
      "//base",
      "//cobalt/browser/h5vcc_accessibility:manager",
      "//cobalt/browser/h5vcc_runtime:deep_link_manager",
      "//cobalt/shell:cobalt_shell_app",
      "//cobalt/shell:cobalt_shell_lib",
      "//content/public/app",
      "//services/device/time_zone_monitor",
      "//starboard:starboard_headers_only",
    ]

    if (is_cobalt_hermetic_build) {
      # Needed for third_party/musl/src/starboard/internal/hwcap_impl.h
      deps += [ "//third_party/musl:headers" ]
    }
    if (is_starboard) {
      deps += [ "//ui/ozone/platform/starboard:starboard" ]
    } else {
      # Web test support only built for the linux-x64x11-no-starboard target.
      deps += [
        "//content/web_test:web_test_browser",
        "//content/web_test:web_test_common",
        "//content/web_test:web_test_renderer",
      ]
    }

    data_deps = [
      "//cobalt/shell:pak",
      "//tools/v8_context_snapshot:v8_context_snapshot",
    ]
  }

  if (!is_cobalt_hermetic_build) {
    strip_binary("strip_cobalt_binary") {
      binary_input = "$root_out_dir/cobalt"
      deps = [ ":cobalt" ]
      testonly = true
    }
  }
}

