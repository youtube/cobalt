    "//media/mojo/common",
    "//media/mojo/mojom:remoting",
    "//testing/gmock",
    "//testing/gtest",
    "//url",
  ]

  if (enable_media_remoting_rpc) {
    sources += [
      "courier_renderer_unittest.cc",
