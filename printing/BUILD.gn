      "//base",
      "//printing/buildflags",
      "//sandbox/linux:sandbox_services",
      "//sandbox/policy",
      "//services/network:network_sandbox_hook",
    ]

    if (use_cups) {
      configs += [ ":cups" ]
    }

    if (is_chromeos && use_cups) {
      deps += [ "//printing/backend" ]
    }
  }
}

source_set("native_drawing_context") {
