    "//ios/chrome/browser/ui/settings:settings_root",
    "//ios/chrome/browser/ui/settings/tabs/inactive_tabs:inactive_tabs_ui",
    "//ui/base",
  ]
}

source_set("tabs_constants") {
  sources = [
    "tabs_settings_constants.h",
    "tabs_settings_constants.mm",
  ]
}

