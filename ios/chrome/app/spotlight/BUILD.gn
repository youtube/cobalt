source_set("spotlight") {
  configs += [ "//build/config/compiler:enable_arc" ]
  sources = [
    "actions_spotlight_manager.h",
    "actions_spotlight_manager.mm",
    "base_spotlight_manager.h",
    "base_spotlight_manager.mm",
    "bookmarks_spotlight_manager.h",
    "bookmarks_spotlight_manager.mm",
    "reading_list_spotlight_manager.h",
    "reading_list_spotlight_manager.mm",
    "spotlight_interface.h",
    "spotlight_interface.mm",
    "spotlight_logger.h",
    "spotlight_logger.mm",
    "spotlight_manager.h",
    "spotlight_manager.mm",
    "spotlight_util.h",
    "spotlight_util.mm",
    "topsites_spotlight_manager.h",
    "topsites_spotlight_manager.mm",
  ]
  deps = [
    "//base",
    "//build:branding_buildflags",
    "//components/bookmarks/browser",
    "//components/browser_sync",
    "//components/favicon/core",
    "//components/favicon_base",
    "//components/history/core/browser",
    "//components/reading_list/core",
    "//components/reading_list/ios",
    "//ios/chrome/app",
    "//ios/chrome/app/strings",
    "//ios/chrome/browser/bookmarks",
    "//ios/chrome/browser/favicon",
    "//ios/chrome/browser/flags:system_flags",
    "//ios/chrome/browser/history",
    "//ios/chrome/browser/reading_list",
    "//ios/chrome/browser/shared/public/features",
    "//ios/chrome/browser/sync",
    "//ios/chrome/browser/ui/content_suggestions",
    "//ios/chrome/common/app_group",
    "//ios/third_party/material_components_ios",
    "//net",
    "//skia",
    "//ui/base",
    "//url",
  ]
  frameworks = [
    "CoreSpotlight.framework",
    "UIKit.framework",
    "UniformTypeIdentifiers.framework",
  ]
}

source_set("unit_tests") {
  configs += [ "//build/config/compiler:enable_arc" ]
  testonly = true
  sources = [
    "reading_list_spotlight_manager_unittest.mm",
    "spotlight_manager_unittest.mm",
  ]
  deps = [
    ":spotlight",
    "//base",
    "//base/test:test_support",
    "//components/bookmarks/browser",
    "//components/bookmarks/test",
    "//components/favicon/core",
    "//components/favicon/core/test:test_support",
    "//components/favicon_base",
    "//components/reading_list/core",
    "//ios/chrome/browser/bookmarks",
    "//ios/chrome/browser/browser_state:test_support",
    "//ios/chrome/browser/reading_list",
    "//ios/chrome/browser/reading_list:test_support",
    "//net",
    "//testing/gtest",
    "//third_party/ocmock",
    "//ui/base:test_support",
  ]
  frameworks = [ "CoreSpotlight.framework" ]
}
