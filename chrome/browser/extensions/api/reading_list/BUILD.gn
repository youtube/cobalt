    "//base",
    "//chrome/browser/profiles:profile",
    "//chrome/common/extensions/api",
    "//components/keyed_service/core",
    "//components/reading_list/core",
    "//content/public/browser",
    "//extensions/browser",
  ]

  deps = [
    "//chrome/browser/reading_list",
    "//url",
  ]
