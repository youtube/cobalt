module blink.mojom;

// An enumeration for different scrollbar mode used in FrameOwnerProperties.
enum ScrollbarMode {
  // Show the scroll bar only when it's needed.
  kAuto,
  // Don't show the scroll bar.
  kAlwaysOff,
  // Show the scroll bar.
  kAlwaysOn
};
