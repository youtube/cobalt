import("//build/config/sanitizers/sanitizers.gni")

static_library("form_parsing") {
  sources = [
    "form_data_parser.cc",
    "form_data_parser.h",
    "password_field_prediction.cc",
    "password_field_prediction.h",
  ]

  public_deps = [
    "//base",
    "//components/password_manager/core/browser:password_form",
  ]

  deps = [
    "//components/autofill/core/browser",
    "//components/autofill/core/common:autofill_regex",
    "//components/password_manager/core/browser/features:password_features",
    "//components/password_manager/core/common",
    "//components/password_manager/core/common:features",
  ]

  configs += [ "//build/config/compiler:wexit_time_destructors" ]
}

source_set("unit_tests") {
  testonly = true
  sources = [
    "form_data_parser_unittest.cc",
    "password_field_prediction_unittest.cc",
  ]

  deps = [
    ":form_parsing",
    "//base/test:test_support",
    "//components/autofill/core/browser",
    "//components/autofill/core/browser:test_support",
    "//components/autofill/core/common",
    "//components/password_manager/core/browser/features:password_features",
    "//components/password_manager/core/common",
    "//components/password_manager/core/common:features",
    "//testing/gmock",
    "//testing/gtest",
    "//url",
  ]
}

group("fuzzers") {
  deps = [ "//components/password_manager/core/browser/form_parsing/fuzzer" ]
}
