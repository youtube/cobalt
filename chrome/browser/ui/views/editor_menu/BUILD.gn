    "//base",
    "//chrome/browser:browser_process",
    "//chromeos/components/editor_menu/public/cpp",
    "//chromeos/constants:constants",
    "//chromeos/strings:strings_grit",
    "//chromeos/ui/vector_icons",
    "//components/vector_icons",
    "//ui/aura",
    "//ui/base",
    "//ui/gfx",
    "//ui/views",
  ]
}
