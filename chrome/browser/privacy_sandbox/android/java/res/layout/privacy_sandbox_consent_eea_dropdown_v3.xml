<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/privacy_sandbox_consent_eea_dropdown"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_title_1"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_title_1_v3"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.ui.widget.TextViewWithLeading
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_description_1"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_description_1_v3"
        app:leading="@dimen/text_size_small_leading"
        style="@style/TextAppearance.TextSmall.Secondary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_title_2"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_title_2_v3"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.ui.widget.TextViewWithLeading
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_description_2"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_description_2_v3"
        app:leading="@dimen/text_size_small_leading"
        style="@style/TextAppearance.TextSmall.Secondary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_title_3"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_title_3_v3"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <org.chromium.ui.widget.TextViewWithLeading
        android:id="@+id/privacy_sandbox_consent_eea_dropdown_description_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_sandbox_m1_consent_dropdown_description_3_v3"
        app:leading="@dimen/text_size_small_leading"
        style="@style/TextAppearance.TextSmall.Secondary" />

</LinearLayout>
