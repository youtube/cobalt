{
  "name": "A browser action for testing chrome.browserAction getters",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "browser_action": {
    "default_title": "Title",
    "default_popup": "Popup.html"
  }
}
