      "//media:test_support",
      "//media/gpu:buildflags",
      "//testing/gtest",
    ]

    if (use_v4l2_codec || use_vaapi) {
      deps += [ "//sandbox/linux:sandbox_services" ]
    }
  }

  test("video_encode_accelerator_tests") {
    testonly = true
    sources = [ "video_encode_accelerator_tests.cc" ]
    data = [ "//media/test/data/" ]
    deps = [
      ":frame_file_writer",
      ":frame_validator",
