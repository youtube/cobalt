        android:key="bullet_six"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_six"
        android:icon="@drawable/ic_link_24dp"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_seven"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_seven"
        android:icon="@drawable/ic_account_circle_24dp"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_eight"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_eight"
        android:icon="@drawable/ic_speed"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="learn_more"
        app:allowDividerBelow="false" />
