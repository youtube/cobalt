import("//starboard/build/config/linux/rdk/config_variables.gni")
import("//build/config/linux/pkg_config.gni")
import("$rdk_starboard_root/third_party/starboard/rdk/shared/build/rdk_toolchain.gni")

declare_args() {
  rdk_enable_securityagent = true
  rdk_enable_ocdm = true
  rdk_enable_rfc_api = false
}

rdk_pkgconfig_extra_args = []
if (!rdk_build_with_yocto) {
  rdk_pkgconfig_extra_args = [
    "-s",
    rdk_sysroot,
    "-a",
    current_cpu,
  ]
}

pkg_config("glib") {
  extra_args = rdk_pkgconfig_extra_args
  packages = [
    "glib-2.0",
    "gobject-2.0",
    "gthread-2.0",
  ]
  supports_isystem = false
}

pkg_config("gstreamer") {
  extra_args = rdk_pkgconfig_extra_args
  packages = [
    "gstreamer-1.0",
    "gstreamer-app-1.0",
    "gstreamer-base-1.0",
    "gstreamer-video-1.0",
    "gstreamer-audio-1.0",
    "gstreamer-pbutils-1.0",
  ]
  supports_isystem = false
}

pkg_config("wpeframework") {
  extra_args = rdk_pkgconfig_extra_args
  packages = [
    "WPEFrameworkCore",
    "WPEFrameworkDefinitions",
    "WPEFrameworkWebSocket",
  ]
  supports_isystem = false
}

pkg_config("cryptography") {
  extra_args = rdk_pkgconfig_extra_args
  packages = [ "WPEFrameworkCryptography" ]
  defines = [ "HAS_CRYPTOGRAPHY=1" ]
  supports_isystem = false
}

if (rdk_enable_securityagent) {
  pkg_config("securityagent") {
    extra_args = rdk_pkgconfig_extra_args
    packages = [ "securityagent" ]
    defines = [ "HAS_SECURITY_AGENT=1" ]
    supports_isystem = false
  }
}

if (rdk_enable_ocdm) {
  pkg_config("ocdm") {
    extra_args = rdk_pkgconfig_extra_args
    packages = [ "ocdm" ]
    defines = [ "HAS_OCDM=1" ]
    supports_isystem = false
  }
}

