  testonly = true

  sources = [
    "app/cobalt_main_delegate.cc",
    "app/cobalt_main_delegate.h",
    "app/cobalt_switch_defaults.cc",
    "app/cobalt_switch_defaults.h",
  ]

  if (is_starboard) {
    sources += [ "app/cobalt_switch_defaults_starboard.cc" ]
  } else if (is_ios && target_platform == "tvos") {
    sources += [ "app/cobalt_switch_defaults_tvos.cc" ]
  }

  if (use_evergreen) {
    sources += [
      "browser/loader_app_metrics.cc",
      "browser/loader_app_metrics.h",
    ]
  }

  public_deps = [ "//cobalt/browser" ]

  deps = [
    "//base",
    "//cobalt/browser:switches",
    "//cobalt/gpu",
    "//cobalt/renderer",
    "//cobalt/shell:cobalt_shell_app",
    "//cobalt/shell:cobalt_shell_lib",
    "//cobalt/shell:pak",
    "//cobalt/utility",
    "//components/memory_system:memory_system",
    "//content/public/app",
    "//gpu/command_buffer/service",
    "//media",
    "//sandbox/policy",
    "//starboard:starboard_headers_only",
    "//third_party/blink/public/common",
    "//ui/gl",
  ]

  if (use_ozone) {
    deps += [ "//ui/ozone:ozone_switches" ]
  }

  if (is_starboard) {
    deps += [ "//ui/ozone/platform/starboard:starboard" ]
  }
}

action("cobalt_build_info") {
  script = "build/build_info.py"
  outputs = [
    "$root_gen_dir/cobalt/cobalt_build_id.h",
    "$root_gen_dir/build_info.json",
    "$root_gen_dir/licenses_cobalt.txt",
    "$root_gen_dir/licenses_cobalt.spdx",
  ]
  args = [
    rebase_path(outputs[0], root_build_dir),
    rebase_path(outputs[1], root_build_dir),
    rebase_path(outputs[2], root_build_dir),
    rebase_path(outputs[3], root_build_dir),
  ]
}

