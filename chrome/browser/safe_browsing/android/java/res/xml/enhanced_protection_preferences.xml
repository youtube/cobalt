<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="subtitle"
        android:title="@string/safe_browsing_enhanced_protection_subtitle"
        app:allowDividerBelow="false" />

    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="when_on"
        android:title="@string/privacy_guide_when_on"
        app:allowDividerBelow="false" />

    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_one"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_one"
        android:icon="@drawable/ic_data_viz_grey"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_two"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_two"
        android:icon="@drawable/ic_download"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_three"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_three"
        android:icon="@drawable/ic_gshield"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_four"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_four"
        android:icon="@drawable/ic_language"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
    <org.chromium.components.browser_ui.settings.TextMessagePreference
        android:key="bullet_five"
        android:summary="@string/safe_browsing_enhanced_protection_bullet_five"
        android:icon="@drawable/ic_password_manager_key"
        app:iconTint="@color/default_icon_color_tint_list"
        app:allowDividerBelow="false" />
