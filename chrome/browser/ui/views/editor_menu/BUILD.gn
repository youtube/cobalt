  sources = [
    "editor_manager.h",
    "editor_manager_factory.cc",
    "editor_manager_factory.h",
    "editor_menu_controller_impl.cc",
    "editor_menu_controller_impl.h",
  ]

  deps = [
    ":utils",
    ":views",
    "//ash/webui/settings/public/constants:mojom",
    "//base",
    "//chrome/browser/profiles:profile",
