# This template is meant to be used to generate Java source files containing
# enums parsed from input C++ header files. The generated files are placed
# in <output_directory>.

template("java_cpp_enum") {
  action_foreach(target_name) {
    assert(defined(invoker.output_directory),
           "Need output directory defined for $target_name")
    script = "//starboard/build/java_cpp_enum_cobalt.py"

    sources = rebase_path(invoker.sources, root_build_dir)
    outputs = [ "$target_out_dir/{{source_name_part}}.java" ]

    args = [
      "{{source}}",
      "--outdir",
      rebase_path(invoker.output_directory),
    ]
  }
}
