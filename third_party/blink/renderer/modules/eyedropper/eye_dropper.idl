[
  Exposed=Window,
  SecureContext,
  RuntimeEnabled=EyeDropperAPI
] interface EyeDropper {
  [CallWith=ExecutionContext] constructor();

  [CallWith=ScriptState, RaisesException] Promise<ColorSelectionResult> open(
      optional ColorSelectionOptions options = {});
};
