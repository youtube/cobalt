import("//pdf/features.gni")
import("//printing/buildflags/buildflags.gni")

source_set("test") {
  sources = [
    "bitmap_utils.cc",
    "bitmap_utils.h",
    "capture_std_stream.cc",
    "capture_std_stream.h",
  ]

  if (enable_printing && enable_pdf) {
    sources += [
      "pdf_utils.cc",
      "pdf_utils.h",
    ]
  }

  deps = [
    "//base",
    "//pdf:buildflags",
    "//printing/buildflags",
  ]

  public_deps = [
    "//skia",
    "//ui/gfx",
  ]

  if (enable_printing) {
    deps += [ "//printing" ]

    if (enable_pdf) {
      deps += [ "//pdf" ]
    }
  }
}
