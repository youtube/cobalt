<!-- TODO(http://b/259931308): Match layout to mocks -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="ad_measurement_toggle"
        android:title="@string/settings_ad_measurement_page_toggle_label"
        android:summary="@string/settings_ad_measurement_page_toggle_sub_label"
        app:allowDividerBelow="false" />

    <PreferenceCategory
        android:key="ad_measurement_when_on"
        android:title="@string/settings_ad_measurement_page_enabled_heading">

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_enabled_bullet_one"
            android:summary="@string/settings_ad_measurement_page_enabled_bullet_1"
            android:icon="@drawable/ic_bar_chart_24dp"
            app:allowDividerBelow="false" />

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_enabled_bullet_two"
            android:summary="@string/settings_ad_measurement_page_enabled_bullet_2"
            android:icon="@drawable/ic_auto_delete_24dp"
            app:allowDividerBelow="false" />

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_enabled_bullet_three"
            android:summary="@string/settings_ad_measurement_page_enabled_bullet_3"
            android:icon="@drawable/ic_background_replace_24dp"
            app:allowDividerBelow="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="ad_measurement_things_to_consider"
        android:title="@string/settings_ad_measurement_page_consider_heading">

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_consider_bullet_one"
            android:summary="@string/settings_ad_measurement_page_consider_bullet_1"
            android:icon="@drawable/ic_delete_24dp"
            app:allowDividerBelow="false" />

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_consider_bullet_two"
            android:summary="@string/settings_ad_measurement_page_consider_bullet_2"
            android:icon="@drawable/ic_filter_list_24dp"
            app:allowDividerBelow="false" />

        <org.chromium.components.browser_ui.settings.TextMessagePreference
            android:key="ad_measurement_consider_bullet_three"
            android:summary="@string/settings_ad_measurement_page_consider_bullet_3"
            android:icon="@drawable/ic_devices_24dp"
            app:allowDividerBelow="false" />

    </PreferenceCategory>

</PreferenceScreen>