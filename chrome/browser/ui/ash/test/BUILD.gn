source_set("unit_tests") {
  testonly = true

  sources = [ "accelerator_metadata_unittest.cc" ]

  deps = [
    "//ash/webui/shortcut_customization_ui/backend",
    "//base",
    "//build:branding_buildflags",
    "//chrome/browser/ui",
    "//testing/gtest",
  ]
}
