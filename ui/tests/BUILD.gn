import("//build/buildflag_header.gni")
import("//testing/test.gni")

test("ui_unittests") {
  sources = [ "run_all_unittests.cc" ]

  deps = [
    "//base/test:test_support",
    "//testing/gtest",
  ]

  if (!is_ios && !is_android && !is_castos) {
    deps += [ "//ui/actions:unit_tests" ]
  }

  if (use_blink) {
    deps += [ "//ui/color:unit_tests" ]
  }
}
