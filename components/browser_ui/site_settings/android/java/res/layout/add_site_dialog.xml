<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/AlertDialogContent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/website_settings_add_site_site_url" />
    <org.chromium.components.browser_ui.widget.text.AlertDialogEditText
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_web_address"
        android:inputType="textNoSuggestions" />

    <!-- A checkbox to decide how this exception is applied. -->
    <org.chromium.components.browser_ui.widget.CheckBoxWithDescription
        android:id="@+id/add_site_dialog_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
