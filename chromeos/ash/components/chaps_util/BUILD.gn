import("//testing/test.gni")

assert(is_chromeos_ash)

component("chaps_util") {
  defines = [ "IS_CHAPS_UTIL_IMPL" ]

  sources = [
    "chaps_slot_session.cc",
    "chaps_slot_session.h",
    "chaps_util.cc",
    "chaps_util.h",
    "chaps_util_impl.cc",
    "chaps_util_impl.h",
    "key_helper.cc",
    "key_helper.h",
    "pkcs12_reader.cc",
    "pkcs12_reader.h",
    "pkcs12_validator.cc",
    "pkcs12_validator.h",
  ]

  deps = [
    "//base",
    "//crypto",
    "//net",
    "//third_party/abseil-cpp:absl",
    "//third_party/boringssl",
  ]

  configs += [ "//build/config/linux/nss" ]
}

source_set("test_support") {
  testonly = true

  sources = [
    "test_util.cc",
    "test_util.h",
  ]

  deps = [
    ":chaps_util",
    "//base",
    "//crypto",
    "//crypto:test_support",
  ]

  configs += [ "//build/config/linux/nss" ]
}

source_set("unit_tests") {
  testonly = true

  sources = [
    "chaps_util_impl_unittest.cc",
    "pkcs12_reader_unittest.cc",
  ]

  deps = [
    ":chaps_util",
    "//base",
    "//crypto",
    "//crypto:test_support",
    "//net:test_support",
    "//testing/gmock",
    "//testing/gtest",
    "//third_party/boringssl",
  ]

  configs += [ "//build/config/linux/nss" ]
}
