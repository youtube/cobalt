{
  "name": "A page action which removes a popup.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "browser_action": {
    "default_title": "Popup Title",
    "default_icon": "icon.png",
    "default_popup": "a_popup.html"
  }
}
