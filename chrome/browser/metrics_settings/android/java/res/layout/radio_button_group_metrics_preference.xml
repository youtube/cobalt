<org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/extended_metrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/metrics_settings_extended_title"
        app:descriptionText="@string/metrics_settings_extended_summary" />

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/basic_metrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/metrics_settings_basic_title"
        app:descriptionText="@string/metrics_settings_basic_summary" />

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/no_metrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/metrics_settings_none_title"
        app:descriptionText="@string/metrics_settings_none_summary" />

</org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout>
