{
  "name": "A browser action to test chrome.browserAction.setPopup()",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "browser_action": {
    "default_title": "Test setPopup()",
    "default_icon": "icon.png"
  }
}
