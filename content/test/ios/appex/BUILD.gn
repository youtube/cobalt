}

compile_entitlements("gpu_process_entitlements") {
  substitutions = [ "IOS_BUNDLE_ID_PREFIX=$ios_app_bundle_id_prefix" ]
  output_name = "$target_gen_dir/gpu_process.appex.entitlements"
