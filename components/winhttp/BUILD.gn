static_library("winhttp") {
  friend = [ ":unit_tests" ]

  public = [
    "network_fetcher.h",
    "proxy_configuration.h",
    "proxy_info.h",
    "scoped_hinternet.h",
  ]

  sources = [
    "net_util.cc",
    "net_util.h",
    "network_fetcher.cc",
    "proxy_configuration.cc",
    "proxy_info.cc",
    "scoped_hinternet.cc",
    "scoped_winttp_proxy_info.h",
  ]

  public_deps = [
    "//base",
    "//third_party/abseil-cpp:absl",
    "//url",
  ]

  defines = [ "SECURITY_WIN32" ]

  libs = [ "winhttp.lib" ]
}

source_set("unit_tests") {
  testonly = true
  sources = [
    "net_util_unittest.cc",
    "network_fetcher_unittest.cc",
    "proxy_configuration_unittest.cc",
    "proxy_info_unittest.cc",
  ]

  deps = [
    ":winhttp",
    "//base",
    "//base/test:test_support",
    "//testing/gtest",
  ]
}
