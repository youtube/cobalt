    if (is_linux) {
      deps += [ "//remoting/host/crash:remoting_crash_uploader" ]
    }

    if (enable_me2me_host && (is_linux || is_win)) {
      deps += [ "//remoting/host/remote_open_url" ]
    }
  }
}

