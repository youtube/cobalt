<resources>
    <style name="HubToolbarActionButtonStyleOverlay.Baseline" parent="">
        <item name="newTabButtonStyle">@style/HubToolbarActionButtonStyle.Baseline</item>
    </style>

    <style name="HubToolbarActionButtonStyleOverlay_Fill" parent="">
        <item name="newTabButtonStyle">@style/HubToolbarActionButtonStyle.Fill</item>
    </style>

    <style name="HubToolbarActionButtonStyle.Baseline" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/TextAppearance.TextMediumThick.Primary</item>
        <item name="android:minWidth">@dimen/min_touch_target_size</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/default_text_color_list</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">?attr/globalTextButtonRippleColor</item>
    </style>

    <style name="HubToolbarActionButtonStyle.Fill" parent="Widget.Material3.Button.Icon">
        <item name="android:minWidth">@dimen/min_touch_target_size</item>
        <item name="android:paddingStart">@dimen/hub_toolbar_action_button_padding_lr</item>
        <item name="android:paddingEnd">@dimen/hub_toolbar_action_button_padding_lr</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/new_tab_button_background</item>
    </style>
</resources>