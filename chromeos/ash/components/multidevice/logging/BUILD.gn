import("//build/config/chromeos/ui_mode.gni")

assert(is_chromeos_ash)

static_library("logging") {
  sources = [
    "log_buffer.cc",
    "log_buffer.h",
    "logging.cc",
    "logging.h",
  ]

  deps = [ "//base" ]
}

source_set("unit_tests") {
  testonly = true
  sources = [ "logging_unittest.cc" ]

  deps = [
    ":logging",
    "//base/test:test_support",
    "//testing/gtest",
  ]
}
