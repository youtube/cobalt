component("country_codes") {
  defines = [ "IS_COMPONENTS_COUNTRY_CODES_IMPL" ]

  sources = [
    "country_codes.cc",
    "country_codes.h",
  ]

  public_deps = [ "//base" ]

  deps = [ "//components/prefs" ]

