{
  "name": "A browser action that makes the active tab's background red",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "browser_action": {
      "name": "Make this page red",
      "default_icon": "icon.png"
  }
}
