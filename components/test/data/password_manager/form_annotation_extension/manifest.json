{
  "manifest_version": 2,
  
  "name": "Forms annotating extension",
  "version": "1.0",

  "browser_action": {
    "default_title": "Next site"
  },
  "background": {
    "scripts": ["background.js", "sites_to_visit.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}