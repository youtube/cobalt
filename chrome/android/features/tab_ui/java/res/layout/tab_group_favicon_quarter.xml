<org.chromium.chrome.browser.tasks.tab_management.TabGroupFaviconQuarter xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/tab_group_start_icon_size"
  android:layout_height="@dimen/tab_group_start_icon_size"
  android:layout_margin="4dp"
  android:background="@drawable/tab_group_favicon_quarter_bg">

  <ImageView
    android:id="@+id/favicon_image"
    android:layout_width="@dimen/tab_group_favicon_image_size"
    android:layout_height="@dimen/tab_group_favicon_image_size"
    android:layout_gravity="center"
    android:importantForAccessibility="no" />

  <TextView
    android:id="@+id/hidden_tab_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:importantForAccessibility="no"
    android:textAppearance="@style/TextAppearance.TextSmall.Primary" />
</org.chromium.chrome.browser.tasks.tab_management.TabGroupFaviconQuarter>