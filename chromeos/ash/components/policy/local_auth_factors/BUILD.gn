assert(is_chromeos, "Non-ChromeOS builds cannot depend on //chromeos")

component("local_auth_factors") {
  output_name = "chromeos_ash_components_policy_local_auth_factors"
  defines = [ "IS_CHROMEOS_ASH_COMPONENTS_POLICY_IMPL" ]

  public = [
    "local_auth_factors_complexity.h",
    "local_auth_factors_prefs.h",
  ]

  sources = [
    "local_auth_factors_complexity.cc",
    "local_auth_factors_prefs.cc",
  ]

  public_deps = [
    "//base",
    "//chromeos/ash/components/osauth/public",
    "//components/prefs",
  ]

  deps = [ "//ash/constants" ]
}

source_set("unit_tests") {
  testonly = true

  sources = [ "local_auth_factors_complexity_unittest.cc" ]

  deps = [
    ":local_auth_factors",
    "//base",
    "//testing/gtest",
  ]
}
