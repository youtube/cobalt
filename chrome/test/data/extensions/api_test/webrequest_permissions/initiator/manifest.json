{
  "name": "webRequest permissions initiator",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Tests that an extension needs access to the request initiator",
  "permissions": [
      "webRequest",
      "*://*.example.com/*",
      "*://*.example2.com/*",
      "*://*.example3.com/*",
      "*://*.example4.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
