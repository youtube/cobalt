{
  "name": "allow silent update",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "notifications",
    "http://*.example.com/"    
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.example.com/*",
        "http://*.example.co.uk/*",
        "http://*.example.com.au/*"
      ],
      "js": ["404.js"]
    }
  ]
}
