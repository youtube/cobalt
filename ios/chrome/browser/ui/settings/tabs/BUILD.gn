source_set("tabs_ui") {
  sources = [
    "tabs_settings_consumer.h",
    "tabs_settings_navigation_commands.h",
    "tabs_settings_table_view_controller.h",
    "tabs_settings_table_view_controller.mm",
    "tabs_settings_table_view_controller_delegate.h",
  ]
