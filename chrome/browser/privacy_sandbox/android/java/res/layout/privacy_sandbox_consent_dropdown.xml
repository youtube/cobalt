<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/privacy_sandbox_consent_dropdown"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_sandbox_consent_dropdown_topics_heading"
        style="@style/TextAppearance.TextMedium.Primary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_topics_one"
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_topics_two"
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_topics_three"
        android:layout_marginBottom="@dimen/list_item_default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <TextView
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_sandbox_consent_dropdown_fledge_heading"
        style="@style/TextAppearance.TextMedium.Primary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_fledge_one"
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_fledge_two"
        android:layout_marginBottom="@dimen/promo_between_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />

    <TextView
        android:id="@+id/privacy_sandbox_consent_dropdown_fledge_three"
        android:layout_marginBottom="@dimen/list_item_default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.TextMedium.Secondary" />


</LinearLayout>
