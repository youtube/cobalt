<org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_previews_settings_radio_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/video_previews_option_never_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        app:primaryText="@string/video_previews_option_never" />

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/video_previews_option_wifi_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        app:primaryText="@string/video_previews_option_wifi" />

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
        android:id="@+id/video_previews_option_wifi_and_mobile_data_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        app:primaryText="@string/video_previews_option_wifi_and_mobile_data" />

</org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout>
