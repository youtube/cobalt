    ":branding_header",
    ":client",
    ":installer_paths",
    ":version_header",
    "mojom/",
    "//base",
    "//chrome/enterprise_companion/device_management_storage",
    "//chrome/enterprise_companion/proto",
    "//chrome/enterprise_companion/telemetry_logger/proto",
    "//chrome/updater:public_sources",
