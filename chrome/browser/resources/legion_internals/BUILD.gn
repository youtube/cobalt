import("//ui/webui/resources/tools/build_webui.gni")

assert(!is_android)

build_webui("build") {
  grd_prefix = "legion_internals"

  static_files = [
    "legion_internals.css",
    "legion_internals.html",
  ]

  ts_files = [
    "legion_internals.ts",
    "legion_internals_browser_proxy.ts",
  ]

  mojo_files_deps = [
    "//chrome/browser/ui/webui/legion_internals:mojo_bindings_ts__generator",
  ]

  mojo_files = [ "$root_gen_dir/chrome/browser/ui/webui/legion_internals/legion_internals.mojom-webui.ts" ]

  ts_composite = true
  ts_deps = [
    "//ui/webui/resources/js:build_ts",
    "//ui/webui/resources/mojo:build_ts",
  ]

  webui_context_type = "trusted"
}
