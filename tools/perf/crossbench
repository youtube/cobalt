import pathlib
import subprocess
import sys

from core import path_util

cb_dir = pathlib.Path(path_util.GetCrossBenchDir())
cb_path = cb_dir / "cb.py"

if __name__ == '__main__':
  argv = sys.argv
  cmd = (cb_path, *argv[1:])
  subprocess.run(cmd)
