dictionary RegisteredTool {
  required DOMString name;
  required DOMString description;
  DOMString inputSchema;
};

callback ToolsChangedCallback = void ();

[
    ImplementedAs=ModelContextTesting,
    RuntimeEnabled=WebMCPTesting
] interface ModelContextTesting {
  [CallWith=ScriptState, RaisesException] sequence<RegisteredTool> listTools();
  [CallWith=ScriptState, RaisesException] Promise<DOMString> executeTool(
  DOMString tool_name, DOMString input_arguments);
  [CallWith=ScriptState, RaisesException] undefined registerToolsChangedCallback(ToolsChangedCallback callback);
};
