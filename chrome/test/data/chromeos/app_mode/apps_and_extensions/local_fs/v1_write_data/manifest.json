{
  "manifest_version": 2,
  "name": "Kiosk App With Local Data",
  "version": "1.0.0",
  "icons": {
    "16": "icon-16.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "kiosk_enabled": true,
  "permissions": [
    {"fileSystem": ["write"]},
    "unlimitedStorage"
  ]
}
