import("//build/config/android/rules.gni")
import("//chrome/android/features/android_library_factory_tmpl.gni")

# This file contains public Java interface and factory targets for all Android
# builds. Different Android builds may get different implementations, such as
# browser_window/internal or browser_window/stub.

# Public Java interfaces
android_library("java") {
  sources = [
    "java/src/org/chromium/chrome/browser/ui/browser_window/AndroidBrowserWindowCreateParams.java",
    "java/src/org/chromium/chrome/browser/ui/browser_window/ChromeAndroidTask.java",
    "java/src/org/chromium/chrome/browser/ui/browser_window/ChromeAndroidTaskFeature.java",
    "java/src/org/chromium/chrome/browser/ui/browser_window/ChromeAndroidTaskTracker.java",
    "java/src/org/chromium/chrome/browser/ui/browser_window/ChromeAndroidTaskTrackerObserver.java",
  ]
  deps = [
    "//base:base_java",
    "//build/android:build_java",
    "//chrome/browser/profiles/android:java",
    "//chrome/browser/tabmodel:java",
    "//chrome/browser/ui/android/multiwindow:java",
    "//third_party/androidx:androidx_annotation_annotation_java",
    "//ui/android:ui_no_recycler_view_java",
    "//ui/base/mojom:ui_base_types_java",
  ]
  srcjar_deps = [ ":java_enum_srcjar" ]
}

# Public Java factory
android_library_factory("factory_java") {
  deps = [ ":java" ]
  sources = [ "//chrome/browser/ui/browser_window/internal/android/java/src/org/chromium/chrome/browser/ui/browser_window/ChromeAndroidTaskTrackerFactory.java" ]
}

java_cpp_enum("java_enum_srcjar") {
  sources =
      [ "//chrome/browser/ui/browser_window/public/browser_window_interface.h" ]
}
