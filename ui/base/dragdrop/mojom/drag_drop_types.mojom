module ui.mojom;

enum DragEventSource {
  kMouse,
  kTouch
};

// "Verb" of a drag-and-drop operation as negotiated between the source and
// destination.
// These constants match their equivalents in NSDragOperation and
// should not be renumbered.
enum DragOperation {
  kNone = 0,
  kCopy = 1,
  kLink = 2,
  kMove = 16,
};
