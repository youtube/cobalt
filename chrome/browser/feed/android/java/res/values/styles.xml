<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MenuFooterChip" parent="Chip">
        <item name="cornerRadius">@dimen/chip_default_height</item>
        <!-- TODO(crbug.com/40158714): Figure out why setting TextAppearance isn't working for
             ChipView. -->
        <item name="primaryTextAppearance">@style/TextAppearance.MenuChip.Text.Blue</item>
        <item name="chipColor">@color/menu_footer_chip_background_baseline_list</item>
        <item name="solidColorChip">true</item>
        <item name="textAlignStart">true</item>
        <item name="reduceEndPadding">true</item>
        <item name="reduceTextStartPadding">true</item>
        <item name="iconHeight">@dimen/menu_footer_chip_icon_size</item>
        <item name="iconWidth">@dimen/menu_footer_chip_icon_size</item>
        <item name="verticalInset">@dimen/menu_footer_chip_vertical_inset</item>
    </style>

    <style name="MenuFooterChipInverse" parent="MenuFooterChip">
        <item name="chipColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/chip_hairline_color_list</item>
        <item name="solidColorChip">false</item>
    </style>

    <style name="NtpHeaderTabLayoutStyle" parent="TabLayoutStyle">
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingEnd">7dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="android:background">@drawable/header_title_section_tab_background_v2</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.TabLayout" parent="TextAppearance.TextAccentMediumThick">
        <item name="android:textColor">@color/tab_layout_text_color_list</item>
    </style>

    <style name="TextAppearance.ClickableButton" parent="TextAppearance.Button.Text.Filled">
        <item name="android:textColor">@macro/default_text_color_on_accent1</item>
    </style>

    <style name="TextAppearance.ClickableButtonInverse" parent="TextAppearance.Button.Text.Filled">
        <item name="android:textColor">@macro/default_text_color_accent1</item>
    </style>

    <style name="TextAppearance.HeaderTitle" parent="TextAppearance.TextAccentMediumThick">
        <item name="android:textColor">@color/header_title_text_color_list</item>
    </style>

    <style name="ManagementActivityNoActionBar">
        <item name="windowActionBar">false</item>
    </style>

</resources>
