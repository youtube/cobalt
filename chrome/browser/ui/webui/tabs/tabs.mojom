  kAudioMuting,
  kAudioRecording,
  kAudioPlaying,
  kBluetoothConnected,
  kBluetoothScanActive,
  kDesktopCapturing,
  kActorAccessing,
  kActorWaitingOnUser,
  kGlicAccessing,
  kGlicSharing,
  kHidConnected,
  kMediaRecording,
  kPipPlaying,
  kSerialConnected,
  kTabCapturing,
  kUsbConnected,
  kVideoRecording,
  kVrPresentingInHeadset,
};

