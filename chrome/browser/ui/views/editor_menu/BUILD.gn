    deps += [ "//chrome/browser/ash" ]
  }

  if (is_chromeos_lacros) {
    sources += [
      "editor_manager_lacros.cc",
      "editor_manager_lacros.h",
    ]

    deps += [ "//chromeos/lacros" ]
  }
}

source_set("views") {
