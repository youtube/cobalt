if (current_toolchain == default_toolchain) {
  if (current_cpu == "arm64") {
    import(
        "//starboard/evergreen/arm64/platform_configuration/configuration.gni")
  } else if (current_cpu == "arm") {
    # TODO: b/474072798 - This shouldn't assume softfp, but we can't import
    # arm.gni here.
    import(
        "//starboard/evergreen/arm/softfp/platform_configuration/configuration.gni")
  } else {
    assert(false, "Unsupported architecture.")
  }
} else {
  import("//starboard/build/config/base_configuration.gni")

  sabi_path = "//starboard/sabi/x64/sysv/sabi-v$sb_api_version.json"
}
