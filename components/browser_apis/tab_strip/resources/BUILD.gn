import("//ui/webui/resources/tools/build_webui.gni")

build_webui("build") {
  grd_prefix = "tab_strip_api"

  # TODO (crbug.com/453756445): make it easier to share components. Users
  # should not need to mess around with WebUIDataSource.
  # The files in this package are served from:
  #     chrome://<webui-host>/tab_strip_api/...
  # This package's resources need to be added to a WebUI's WebUIDataSource.
  # The import is 'chrome/grit/tab_strip_api_resources_map.h and the resource
  # paths is |kTabStripApiResources|.
  grd_resource_path_prefix = "tab_strip_api"

  webui_context_type = "trusted"

  ts_files = [
    "tab_strip_observer.ts",
    "tab_strip_observation.ts",
  ]

  ts_composite = true

  ts_deps = [
    "//ui/webui/resources/js:build_ts",
    "//ui/webui/resources/mojo:build_ts",
  ]

  mojo_files = [
    "$root_gen_dir/components/browser_apis/tab_strip/tab_strip_api.mojom-webui.ts",
    "$root_gen_dir/components/browser_apis/tab_strip/node_id_converter.ts",
    "$root_gen_dir/components/browser_apis/tab_strip/tab_strip_api_data_model.mojom-webui.ts",
    "$root_gen_dir/components/browser_apis/tab_strip/tab_strip_api_events.mojom-webui.ts",
    "$root_gen_dir/components/browser_apis/tab_strip/tab_strip_api_types.mojom-webui.ts",
    "$root_gen_dir/components/browser_apis/tab_strip/tab_strip_api_types.mojom-converters.ts",
    "$root_gen_dir/components/tab_groups/public/mojom/tab_group_types.mojom-webui.ts",
  ]

  mojo_files_deps = [
    "//components/browser_apis/tab_strip:mojom_ts__copy_converters",
    "//components/browser_apis/tab_strip:mojom_ts__generator",
    "//components/tab_groups/public/mojom:mojo_bindings_ts__generator",
  ]
}
