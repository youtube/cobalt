  sources = [ "print_preview_dialog_controller_cros_unittest.cc" ]

  deps = [
    ":print_preview",
    "//chrome/browser/ui/webui/ash/print_preview_cros",
    "//chrome/test:test_support",
    "//testing/gtest",
    "//ui/views:test_support",
  ]
}
