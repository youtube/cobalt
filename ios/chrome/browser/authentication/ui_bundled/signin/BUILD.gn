}

# Contains public headers.
source_set("signin_headers") {
  sources = [
    "signin_coordinator.h",
    "signin_utils.h",
  ]
  public_deps = [
    ":constants",
    "//base",
    "//components/signin/public/base",
    "//components/signin/public/identity_manager",
