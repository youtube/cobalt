        # rewriting decade-old, goto-ridden code, disable the warning.
        cflags = [ "-Wno-microsoft-goto" ]
      }
    }

    executable("google_converter") {
      include_dirs = [
        "$visual_studio_path/DIA SDK/include",
        "breakpad/src",
      ]

      sources = [
        "breakpad/src/tools/windows/converter_exe/converter.cc",
